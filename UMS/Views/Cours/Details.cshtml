@model UMS.Models.Cours

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Cours</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Department.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Department.Name)
        </dd>

    </dl>
</div>

<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Student Name</th>
                <th>Department Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in @Model.CourseStudents.Select(s => s.Student))
            {
            <tr>
                <td>
                    <a href="/students/details/@student.Id">@student.Name</a>
                </td>
                <td>
                    <a href="/departments/details/@student.DeptId">@student.Department.Name</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
